<h1>
  Create a room
</h1>

<%= render partial: 'form' %>

<h1>
  Chat list
</h1>

<% User.all.each do |user| %>
  <%= simple_form_for [@user, @room] do |form| %>
    <% if user != current_user %>
    <div class="hidden">
      <%= form.input :name, input_html: {value: user.first_name}%>
      <%= form.input :user_ids, input_html: {value: user.id }%>
    </div>
      <%= form.submit user.first_name, class: 'btn btn-success' %>
    <% end %>
  <% end %>
<% end %>

<%= link_to "Back", rooms_path %>
