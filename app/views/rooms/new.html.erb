<h1>Chat list</h1>

<% User.all.each do |user| %>
  <%= simple_form_for [@user, @room] do |form| %>
    <% if user != current_user && (user.rooms.ids & current_user.rooms.ids).empty? %>
      <div class="hidden">
        <%= form.input :name, input_html: {value: user.first_name}%>
        <%= form.input :user_ids, input_html: {value: user.id }%>
      </div>
        <%= form.submit user.first_name, class: 'nav-link room-nav-link fill-width' %>
    <% end %>
  <% end %>
<% end %>

<%= link_to "Back", rooms_path %>
