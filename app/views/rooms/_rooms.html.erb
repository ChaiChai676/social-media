<div class="rooms-container">
  <nav class="nav flex-column">
    <% @rooms.each do |room| %>
      <% if user_signed_in? && room.user_ids.include?(current_user.id) %>
        <%= link_to room.users.pluck(:first_name).join(" ").gsub(current_user.first_name, ""), room_path(room), class: 'nav-link room-nav-link' %>
      <% end %>
    <% end %>
  </nav>
</div>
