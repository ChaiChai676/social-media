    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render 'shared/navbar' %>
      <div class="below-nav">
        <%= render 'shared/flashes' %>
          <div class="container">
